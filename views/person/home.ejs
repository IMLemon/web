 <div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
     <div class="row">
      <% persons.forEach( function(model) { %>
      <div class="panel panel-default col-md-6" style="height:200px;">

        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="http://localhost:1337/person/eventdetails/<%=model.id%>"><%=model.name%></a>
          </h3>
        </div>

        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-md-offset-1 col-xs-4"> 
              <a href="http://localhost:1337/person/eventdetails/<%=model.id%>">
                <img src="<%=model.image%>"  class="img-thumbnail" style="height:135px;object-fit:cover;"/>
              </a>
            </div>
            <div class="col-md-7 col-md-offset-1  col-xs-7 col-xs-offset-1">
              <p class="text-left" style="min-height:140px;max-height:140px;overflow:hidden;"><%=model.shortDes%></p>
            </div>
          </div>
        </div>

       </div>
      <% }); %>
     </div>
   </div>
 </div>
</div>