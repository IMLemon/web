<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-2">
			<h2>Event Update form</h2>
		</div>
	</div>
	<div class="row">

		<form action="/person/edit/<%=person.id%>" method="POST" class="form-horizontal" role="form">
			
			<div class="form-group">
				<label class="col-md-3 control-label">
					Event name: 
				</label>
				<div class="col-md-7">
					<input type="text" class="form-control" name="Person[name]" value="<%=person.name%>"/>
				</div>
			</div>

			<div class="form-group">
				<label class="col-md-3 control-label">
					Short Description: 
				</label>
				<div class="col-md-7">
					<textarea class="form-control" name="Person[shortDes]" rows="6"><%=person.shortDes%></textarea>
				</div>
			</div>

			<div class="form-group">
				<label class="col-md-3 control-label">
					Full Description: 
				</label>
				<div class="col-md-7">
					<textarea class="form-control" name="Person[fullDes]" rows="10"><%=person.fullDes%></textarea>
				</div>
			</div>

			<button class="btn btn-default col-md-offset-3" type="submit" value="EDIT">Confirm</button>
		</form>
	</div>
</div>