<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-2">
			<h2>
				Event Create Form
			</h2>
		</div>
	</div>
	<div class="row">
		<form action="/person/create" method="POST" class="form-horizontal" role="form">
			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Event name: 
				</label>
				<div class="col-md-8">
					<input type="text" class="form-control" name="Person[name]" />
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Short Description: 
				</label>
				<div class="col-md-8">
					<textarea class="form-control" name="Person[shortDes]" rows="6"></textarea>
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Full Description: 
				</label>
				<div class="col-md-8">
					<textarea class="form-control" name="Person[fullDes]" rows="10"></textarea>
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Image URL: 
				</label>
				<div class="col-md-8">
					<input type="url" class="form-control" name="Person[image]"/>
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Organizer: 
				</label>
				<div class="col-md-8">
					<%if(req.session.username!="admin"){%>
					<select class="form-control" name="Person[organizer]">
						<option><%=req.session.stafforganizer%></option>
					</select>
					<%}else{%>
					<select class="form-control" name="Person[organizer]">
						<option>Music Society</option>
						<option>gis</option>
						<option>comp</option>
					</select>
					<%}%>
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Date: 
				</label>
				<div class="col-md-8">
					<input type="date" class="form-control" name="Person[date]" placeholder="2015-11-18"/>
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Time: 
				</label>
				<div class="col-md-8">
					<select class="form-control" name="Person[time]">
						<option>Morning</option>
						<option>Afternoon</option>
						<option>Evening</option>
					</select>
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Venue: 
				</label>
				<div class="col-md-8">
					<select class="form-control" name="Person[venue]">
						<option>AC Hall</option>
						<option>SWT501</option>
						<option>RRS638</option>
					</select>
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Quota: 
				</label>
				<div class="col-md-8">
					<input type="number" class="form-control" name="Person[quota]" />
				</div>
			</div>

			<div class="col-md-10 col-md-offset-2 form-group">
				<label class="col-md-4 control-label">
					Hightlighted Event: 
				</label>
				<div class="col-md-8">
					<input type="checkbox" class="form-control" name="Person[highlighted]" />
				</div>
			</div>

			<button class="btn btn-default col-md-offset-3" type="submit" value="ADD">Submit</button>

		</form>
	</div>
</div>