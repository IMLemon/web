<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-2">
			<h2>Staff Update form</h2>
		</div>
	</div>
	<div class="row">

		<form action="/user/edit/<%=staff.id%>" method="POST" class="form-horizontal" role="form">
			
			<div class="form-group">
				<label class="col-md-3 control-label">
					Staff username: 
				</label>
				<div class="col-md-7">
					<input type="text" class="form-control" name="Staff[name]" value="<%=staff.username%>"/>
				</div>
			</div>

			<div class="form-group">
				<label class="col-md-3 control-label">
					Oraganizer: 
				</label>
				<div class="col-md-7">
					<select class="form-control" name="Staff[organizer]">
						<option>Music Society</option>
						<option>gis</option>
						<option>comp</option>
					</select>
				</div>
			</div>


			<button class="btn btn-default col-md-offset-3" type="submit" value="EDIT">Confirm</button>
		</form>
	</div>
</div>